{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false, // 是否默认禁用 any
    "baseUrl": ".", // 工作根目录
    "types": [
      "webpack",
    ],
    "paths": {
      "@/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
    },
    "lib": [
      "es6",
      "esnext",
      "dom",
      "dom.iterable",
      "ESNext",
    ]
  },
  "include": [
    "./src/**/*",
    "src/**/*.ts",
    "src/**/*.jsx", 
    "src/**/*.tsx", 
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
