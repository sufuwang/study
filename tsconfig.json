{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false, // 是否默认禁用 any
    "baseUrl": ".", // 工作根目录
    "types": [
      "webpack",
    ],
    "paths": {
      "@/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
    },
    "lib": [
      "es6",
      "esnext",
      "dom",
      "dom.iterable",
      "ScriptHost",
    ]
  },
  "include": [
    "./src/**/*",
    "src/**/*.ts",
    "src/**/*.vue", 
  ],
  "exclude": [
    "node_modules",
    "dist",
    "patient-files_pc"
  ]
}
